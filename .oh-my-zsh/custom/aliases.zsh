ALIAS_PATH="$ZSH_CUSTOM/aliases.zsh"
export BROWSER_NAME="Firefox"

alias edit-aliases="vim $ALIAS_PATH && source $ALIAS_PATH"
alias vim="nvim" 
alias cat="bat"
alias ntest="npm run test -- --coverage"
alias nbuild="npm run build"
alias nbute="npm run build && npm run test -- --coverage"
alias nstart="npm run start"
alias nbust="npm run build && npm run start"
alias ndev="npm run dev"
alias nlint="npm run lint"
alias browser="open -a $BROWSER_NAME"
alias gs="git status"
alias cdrepos=". cd $HOME/work/"
alias cdcustom=". cd $ZSH_CUSTOM"
alias co="code ."
alias tu="tilt up"
alias td="tilt down"
alias bi="brew update && brew install"
alias bu="brew update && brew upgrade"
alias bun="brew uninstall"
alias restart="exec zsh"
alias cw="clone-work"
alias cm="clone-me"
alias ni="npm install"
alias nigl="npm install --global"
alias nid="npm install --save-dev"
alias nout="npm outdated"
alias nupd="npm update"
alias nuni="npm uninstall"
alias yi="yarn install"
alias yadd="yarn add"
alias asp=". aws-set-profile"
alias repo='gh browse'
alias repoc='gh browse -b $(git branch --show-current)'
alias gistl='gh gist list'
alias gistc='gh gist clone' 
alias richp="rich --print --emoji"
alias gauth="gcloud auth login --update-adc"
alias git-amend="git commit --amend --no-edit"
alias gad="git commit --amend --no-edit"
alias gadn="git commit --amend --no-edit --no-verify"
alias force-push="git push --force"
alias fp="git push --force"
alias gcd="gcloud config configurations activate default"
alias tg="terragrunt"
alias tgp='terragrunt plan -parallelism 20 -out tg.plan'
alias tga='terragrunt apply -parallelism 20 -auto-approve tg.plan'
alias tgaa='terragrunt apply -parallelism 20 -auto-approve'
alias main="git checkout main"
alias branch="git checkout -b"
alias jn='jira issue list -q "assignee = currentUser() AND sprint in openSprints() and status != Done" --order-by "status" --reverse'
alias jnp='jn --plain'
